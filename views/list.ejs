<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>To DoList App</title>
        <link rel="stylesheet" href="css/styles.css">
    </head>
    <body>
  <div class="box" id="heading">
      <h1><%= nameofDay %></h1>
  </div>
  <div class="box" >
       
      
     <% numofItems.forEach(function(item){ %>
      <form  action="/delete" method="post">
          
           <div class="item">
        
      
               <button type="submit" value="<%=item._id%>" name="button" > -</button>
               
               <p><%= item.name %> </p>
                
          
               
          
        
             </div>
      </form>
     
      
      <%}) %>
       
  
       
    <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="newItem">
        <button class="first" type="submit" name="button">+</button>
    
    </form>
</div>
